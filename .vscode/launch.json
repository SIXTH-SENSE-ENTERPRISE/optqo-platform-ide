{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch GUI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/electron",
            "args": ["${workspaceFolder}/gui-main.cjs"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch CLI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/main.js",
            "args": ["help"],
            "console": "integratedTerminal"
        }
    ]
}
